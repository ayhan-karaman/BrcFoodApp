@model List<BrcFoodApp.WebUI.DTOs.ProductDtos.ResultProductDto>

@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Listesi</h4>
                    </div>
                    <div class="card-body">
                        <a href="/Product/CreateProduct" class="btn my-3 btn-outline-success">
                           <i class="fas fa-plus-square "></i>
                           Yeni Ürün
                        </a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#No</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Ürün Fiyatı</th>
                                    <th scope="col">Aksiyonlar</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.Price</td>
                                    <td>
                                       <div class="btn-group">
                                            <a href="/Product/UpdateProduct/@item.Id" class="btn btn-outline-warning">
                                              <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a href="/Product/DeleteProduct/@item.Id" class="btn btn-outline-danger">
                                              <i class="fas fa-trash-alt"></i>
                                            </a>
                                       </div>
                                    </td>
                                </tr>
                            }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>