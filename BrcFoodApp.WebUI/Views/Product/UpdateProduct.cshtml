@model BrcFoodApp.WebUI.DTOs.ProductDtos.UpdateProductDto

@{
    ViewData["Title"] = "Ürün Güncelleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Ürün Güncelleme</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateProduct">
                             <input asp-for="Id" type="hidden" >
                            <div class="form-group">
                              <label asp-for="ProductName" >Ürün Adı:</label>
                              <input type="text" asp-for="ProductName" class="form-control" >
                            </div>
                            <div class="form-group">
                              <label asp-for="Price" >Ürün Fiyatı:</label>
                              <input type="text" asp-for="Price" class="form-control" >
                            </div>
                            <div class="form-group">
                              <label asp-for="CategoryId" >Kategori:</label>
                              <input type="text" asp-for="CategoryId" class="form-control" >
                            </div>
                            <div class="form-group">
                              <label asp-for="ImageUrl" >Image URL:</label>
                              <input type="text" asp-for="ImageUrl" class="form-control" >
                            </div>
                            <div class="form-group">
                              <label asp-for="Description" >Ürün Adı:</label>
                              <textarea type="text" asp-for="Description" class="form-control" rows="5" ></textarea>
                            </div>
                            <button type="submit" class="btn btn-success" >Ürünü Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>