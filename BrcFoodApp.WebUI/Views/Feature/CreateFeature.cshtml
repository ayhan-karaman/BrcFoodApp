@model BrcFoodApp.WebUI.DTOs.FeatureDtos.CreateFeatureDto
@{
    ViewData["Title"] = "Öne Çıkan Ekleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne Çıkan Ekleme</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="CreateFeature">
                            <div class="form-group">
                              <label asp-for="Title" >Başlık:</label>
                              <input asp-for="Title" class="form-control" >
                            </div>
                            <div class="form-group">
                              <label asp-for="SubTitle" >Alt Başlık:</label>
                              <input asp-for="SubTitle" class="form-control" >
                            </div>
                            <div class="form-group">
                              <label asp-for="Description" >Açıklama:</label>
                              <textarea type="text" asp-for="Description" class="form-control" rows="5" ></textarea>
                            </div>
                             <div class="form-group">
                              <label asp-for="ImageUrl" >Görsel URL:</label>
                              <input type="text" asp-for="ImageUrl" class="form-control" >
                            </div>
                             <div class="form-group">
                              <label asp-for="VideoUrl" >Video URL (Embed Link):</label>
                              <input type="text" asp-for="VideoUrl" class="form-control" >
                            </div>
                            <button type="submit" class="btn btn-success" >Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>